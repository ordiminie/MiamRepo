@model Miam.ViewModels.IngredientFormViewModel
@{
    ViewBag.Title = "IngredientForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_ValidationPartial")

<h2>@Model.Title</h2>


<div class="bg-gray container-form">
    @using (Html.BeginForm("AddOrUpdate", "Ingredient"))
    {
        @Html.AntiForgeryToken();
        <div class="form-group">
            @Html.LabelFor(m => m.Ingredient.Name)
            @Html.TextBoxFor(m => m.Ingredient.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Ingredient.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Ingredient.Description)
            @Html.TextBoxFor(m => m.Ingredient.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Ingredient.Description)
        </div>
        <div class="form-group">
            @Html.ActionLink("Annuler", "Index", "Ingredient", null , new { @class = "btn btn-back" })
            <button type="submit" class="btn btn-success">Enregistrer</button>
        </div>
        @Html.HiddenFor(m => m.Ingredient.Id)
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}


