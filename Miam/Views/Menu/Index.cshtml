@model IEnumerable<Miam.Models.Menu>
@using Miam.Shared;

@{
    ViewBag.Title = "Liste des menus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_ValidationPartial")

<div class="row">
    <h2 class="col-sm-8">@ViewBag.Title</h2>
    <p class="col-sm-4 btn-heading-wrap">
        @Html.ActionLink("Nouveau menu", "New", null, new { @class = "btn btn-primary" })
    </p>
</div>


<table class="table table-hover">
    <thead class="thead-default p-3 mb-2 bg-dark text-white">
        <tr class="row">
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.BeginDate)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="col-sm-2">
            </th>
        </tr>
    </thead>

        @foreach (var item in Model)
        {
            <tr class="row action" actionName="Detail" controllerName="Menu" elementId="@item.Id">
                <td class="col-sm-2">
                    @Html.DisplayFor(m => item.BeginDate)
                </td>
                <td class="col-sm-2">
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td class="col-sm-6">
                    @Html.DisplayFor(m => item.Description)
                </td>
                <td class="col-sm-2 text-right">
                    @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove", @title = "Supprimer" })
                </td>
            </tr>
        }

</table>

@section scripts{
    @Scripts.Render("~/Scripts/actionRow.miam.js")
}
